<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_height="match_parent">

  <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
      android:gravity="right|center_vertical"
      android:orientation="horizontal"
      android:id="@+id/matchdetails_turnactivity_row_card1_container"
      android:layout_weight="1" android:layout_marginLeft="16dp">
    <LinearLayout android:layout_width="0dp" android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white" android:orientation="horizontal">
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
          style="@style/card_mana"
          android:layout_gravity="center_vertical"
          android:id="@+id/matchdetails_turnactivity_row_card1_mana"/>
      <TextView android:layout_width="0dp" android:layout_weight="1"
          android:layout_height="wrap_content"
          style="@style/card_name"
          android:gravity="right"
          android:id="@+id/matchdetails_turnactivity_row_card1_name"/>
    </LinearLayout>
    <View android:layout_width="28dp" android:layout_height="4dp"
        android:id="@+id/matchdetails_turnactivity_row_card1_connector"
        android:background="@color/main_pink"/>
  </LinearLayout>

  <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
      android:gravity="left|center_vertical"
      android:orientation="horizontal"
      android:id="@+id/matchdetails_turnactivity_row_card2_container"
      android:layout_weight="1" android:layout_marginRight="16dp">
    <View android:layout_width="28dp" android:layout_height="4dp"
        android:background="@color/main_pink"/>
    <LinearLayout android:layout_width="0dp" android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white" android:orientation="horizontal">
      <TextView android:layout_width="0dp" android:layout_weight="1"
          android:gravity="left"
          style="@style/card_name"
          android:layout_height="wrap_content"
          android:id="@+id/matchdetails_turnactivity_row_card2_name"/>
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
          style="@style/card_mana"
          android:layout_gravity="center_vertical"
          android:id="@+id/matchdetails_turnactivity_row_card2_mana"/>
    </LinearLayout>

  </LinearLayout>


</LinearLayout>