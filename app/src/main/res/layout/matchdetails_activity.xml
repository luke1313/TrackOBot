<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout android:layout_width="match_parent" android:gravity="center_vertical"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:background="@color/main_pink"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingBottom="8dp"
      android:layout_height="wrap_content" android:orientation="horizontal">
    <com.trackobot.android.util.ClassIcon
        android:id="@+id/matchdetails_activity_player1_icon"
        xmlns:icon="http://schemas.android.com/apk/res-auto"
        icon:border_width="2dp"
        android:layout_width="44dp"
        android:layout_height="44dp"/>
    <LinearLayout android:layout_width="0dp" android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent" android:gravity="center">
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:textColor="@color/white" android:textStyle="bold" android:textSize="16sp"
          android:text="Warlock" android:id="@+id/matchdetails_activity_player1"/>
      <LinearLayout android:layout_width="wrap_content"
          android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="@color/white" android:textSize="12sp"
            android:text="first" android:id="@+id/matchdetails_activity_player1_starting"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="@color/white" android:textSize="12sp"
            android:text=" (me)"/>
      </LinearLayout>

    </LinearLayout>
    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
        android:textColor="@color/white" android:textSize="16sp" android:textStyle="bold"
        android:text="vs" android:layout_weight="1" android:gravity="center"/>
    <LinearLayout android:layout_width="0dp" android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent" android:gravity="center">
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:textColor="@color/white" android:textStyle="bold" android:textSize="16sp"
          android:text="Warlock" android:id="@+id/matchdetails_activity_player2"/>
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:textColor="@color/white" android:textSize="12sp"
          android:text="first" android:id="@+id/matchdetails_activity_player2_starting"/>
    </LinearLayout>
    <com.trackobot.android.util.ClassIcon
        android:id="@+id/matchdetails_activity_player2_icon"
        xmlns:icon="http://schemas.android.com/apk/res-auto"
        icon:border_width="2dp"
        android:layout_width="44dp"
        android:layout_height="44dp"/>
  </LinearLayout>

  <FrameLayout android:layout_width="match_parent"
      android:layout_height="match_parent">
    <View android:layout_width="6dp" android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/main_pink"/>
    <ListView android:layout_width="match_parent" android:layout_height="match_parent"
        android:divider="@null"
        android:id="@+id/matchdetails_activity_list"/>
  </FrameLayout>


</LinearLayout>