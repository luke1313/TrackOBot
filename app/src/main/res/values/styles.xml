<resources>

  <!-- Base application theme. -->
  <style name="TrackOBotTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    <item name="android:actionBarStyle">@style/ActionBar.TrackOBot</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowActionBarOverlay">true</item>
    <item name="android:homeAsUpIndicator">@null</item>
  </style>
  <style name="ActionBar.TrackOBot" parent="android:Widget.Holo.ActionBar">
    <item name="android:height">@dimen/actionbar_height</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle.TrackOBot</item>
  </style>
  <style name="ActionBar.TitleTextStyle.TrackOBot"
      parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="row_classicon">
    <item name="android:layout_width">40dp</item>
    <item name="android:layout_height">40dp</item>
  </style>


  <style name="row_classname">
    <item name="android:layout_width">40dp</item>
    <item name="android:textSize">10sp</item>
    <item name="android:ellipsize">marquee</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:textColor">@color/text_color_extra</item>
  </style>


  <style name="row_classicon_class_stat" parent="row_classicon">
    <item name="android:layout_width">24dp</item>
    <item name="android:layout_height">24dp</item>
  </style>

  <style name="row_classname_all" parent="row_classname">
    <item name="android:textSize">10sp</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="row_content_text">
    <item name="android:textColor">@color/black</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="row_content_extra_text">
    <item name="android:layout_marginTop">4dp</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/text_color_extra</item>
  </style>

  <style name="row_content_extra_text_without" parent="row_content_extra_text">
    <item name="android:layout_marginTop">0dp</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/text_color_extra</item>
  </style>

  <style name="turn_row">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="card_name">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:padding">4dp</item>
  </style>

  <style name="card_mana">
    <item name="android:background">@color/blue_link</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:padding">4dp</item>
    <item name="android:textColor">@color/white</item>
  </style>

</resources>
